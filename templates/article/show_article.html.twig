{% extends 'base.html.twig' %}

{% block title %} Voir article {% endblock %}

{% block body %}


<div class="row"> 
   <div class="col-10 mx-auto mb-4">

    {% include 'include/_flashes.html.twig'%}
   </div>
</div>

<div class="row"> 
   <div class="col-10 mx-auto mb-4">

            <div class="card">
                <div class="card-header">
                    <h1 class="text-center card-title mb-5">{{ article.title }}</h1>
                    <h4 class="text-center text-secondary mb-3">{{ article.subtitle }}</h4>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-center text-muted">Cr√©e le :{{ article.createdAt | date('d/m/Y') }} | Par : {{ article.author.firstname }} {{ article.author.lastname }}</li>
                </ul>

                <img src="{{ asset('uploads/' ~ article.photo) }}" class="img-custom" alt="{{ article.title }}">
                <div class="card-body">
                    <p class="card-text my-4 col-8 mx-auto">{{ article.content | raw }}</p>
                    {# le filtre raw(cru) : afficher tel quel , permet d'evaluer , d interpreter les balises s'il y'en a ( il joue un role contraire par rapport au specialchars en HTML) #}
                </div>
            </div>
 
   </div>
</div>


{% endblock %}